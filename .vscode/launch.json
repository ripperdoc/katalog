{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug server.py",
      "type": "debugpy",
      "request": "launch",
      "module": "katalog.cli",
      "args": ["server", "--reload", "--reload-dir", "src"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "KATALOG_WORKSPACE": "workspace_eval"
      },
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug test workspace",
      "type": "debugpy",
      "request": "launch",
      "module": "katalog.cli",
      "args": [
        "server",
        "--reload",
        "--reload-dir",
        "src",
        "--test-workspace",
        "--workflow",
        "../workflow.example.toml",
        "--seed-assets",
        "2000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "KATALOG_WORKSPACE": "workspace_test"
      },
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug web-app in Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/ui",
      "preLaunchTask": "npm: dev (ui)"
    },
    {
      "name": "Debug workflow apply (workspace_eval)",
      "type": "debugpy",
      "request": "launch",
      "module": "katalog.cli",
      "cwd": "${workspaceFolder}",
      "args": ["-w", "workspace_eval", "workflows", "apply", "--file", "workflow.toml"],
      "env": {
        "KATALOG_WORKSPACE": "${workspaceFolder}/workspace_eval",
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false,
      "console": "integratedTerminal",
      "subProcess": true
    }
  ]
}
